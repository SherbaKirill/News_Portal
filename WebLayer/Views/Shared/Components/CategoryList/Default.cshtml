@model IEnumerable<WebLayer.Models.CategoryViewModel>

@{
    foreach (var category in Model)
    {
        <a asp-controller="News" asp-action="List" asp-route-category="@category.CategoryName">@category.DisplayName</a>
        @if (User.IsInRole("admin") || User.IsInRole("moderator"))
        {
            <a class="nav-link text-dark" asp-area="" asp-controller="News" asp-action="UpdateCategory" asp-route-Id=@category.Id>Update</a>
            <a class="nav-link text-dark" asp-area="" asp-controller="News" asp-action="DeleteCategory" asp-route-Id=@category.Id>Delete</a>
        }
        <br />
    }
    @if (User.IsInRole("admin") || User.IsInRole("moderator"))
    {
        <p><a class="nav-link text-dark" asp-area="" asp-controller="News" asp-action="CreateCategory">Create</a></p>
        }
    }
